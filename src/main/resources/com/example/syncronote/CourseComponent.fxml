<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<HBox alignment="CENTER_LEFT" prefHeight="34.0" prefWidth="500.0" style="-fx-border-color: white;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.syncronote.logic.graphic_controllers.ProfessorCourseComponentGraphicController">
   <children>
      <Label fx:id="courseNameLbl" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="120.0" text="Name" textFill="#00acf5">
         <font>
            <Font name="Calibri Italic" size="20.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
      <Label fx:id="gradeLbl" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="140.0" text="Grade" textFill="#00acf5">
         <font>
            <Font name="Calibri Italic" size="20.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
      <Label fx:id="categoryLbl" contentDisplay="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="30.0" prefWidth="138.0" text="Category" textFill="#00acf5">
         <font>
            <Font name="Calibri Italic" size="20.0" />
         </font>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </Label>
      <Button fx:id="deleteBtn" alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#deleteCourse" prefHeight="30.0" prefWidth="30.0" style="-fx-background-color: #E37A7A;" stylesheets="@Style.css">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@img/trash.png" />
               </image>
            </ImageView>
         </graphic>
         <HBox.margin>
            <Insets left="20.0" />
         </HBox.margin>
      </Button>
   </children>
</HBox>
